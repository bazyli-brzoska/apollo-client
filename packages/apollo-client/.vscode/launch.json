{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest this Test",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--inspect-brk"],
      "console": "integratedTerminal",
      "args": ["--runInBand", "${relativeFile}"],
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**/*",
        "node_modules/jest*/**/*",
        "node_modules/jsdom/**/*",
        "scripts/tests.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest all tests",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "runtimeArgs": ["--inspect-brk"],
      "console": "integratedTerminal",
      "args": ["--runInBand"],
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**/*",
        "node_modules/jest*/**/*",
        "node_modules/jsdom/**/*",
        "scripts/tests.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/lib/apollo.umd.js",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/lib/**/*.js"]
    }
  ]
}
